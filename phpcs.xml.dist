<?xml version="1.0"?>
<ruleset name="aoc">
    <description>The coding standard for AoC.</description>

    <file>.php_cs</file>
    <file>tests</file>

    <rule ref="Wisp">
        <exclude name="Wisp.Commenting.HeaderComment"/>
        <exclude name="Squiz.PHP.Eval.Discouraged"/>
        <exclude name="Symfony2.Commenting.FunctionComment.Missing"/>
    </rule>
</ruleset>
